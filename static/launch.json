{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Simple HTTP Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Ecological-Footprint-Analysis.io/start_server.py",
            "console": "integratedTerminal",
            "args": ["--directory", ".", "8000"],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Open Browser",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "google-chrome",
            "program": "${workspaceFolder}/Ecological-Footprint-Analysis.io/index.html",
            "args": ["http://localhost:8000"]
        }
    ]
}
